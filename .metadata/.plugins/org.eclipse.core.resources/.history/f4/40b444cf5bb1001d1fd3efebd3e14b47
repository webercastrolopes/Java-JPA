package aplicacao;

import dominio.Pessoa;
import jakarta.persistence.EntityManager;
import jakarta.persistence.EntityManagerFactory;
import jakarta.persistence.Persistence;


public class Programa {

	public static void main(String[] args) {
	
		Pessoa p1 = new Pessoa(null,"Daieny","daieny@gmail.com");
		/*
		Pessoa p2 = new Pessoa(null,"Uilton","uilton@gmail.com");
		Pessoa p3 = new Pessoa(null,"Junior","junior@gmail.com");
		Pessoa p4 = new Pessoa(null,"Mari","mari@gmail.com");
		*/
		
		EntityManagerFactory emf = Persistence.createEntityManagerFactory("exemplo-jpa");
		EntityManager em = emf.createEntityManager();
		
		em.getTransaction().begin();
		em.persist(p1);  //Ã© o 'persist' que pega o objeto e salva no banco de dados.
		em.getTransaction().commit();
		
		System.out.println("Pronto, feito ...no DB ");
		
		/*
		System.out.println(p1);
		System.out.println(p2);
		System.out.println(p3);
		System.out.println(p4);
		 */
	}

}
